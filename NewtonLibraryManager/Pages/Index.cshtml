@if(Model.SearchCompleted) {
<form asp-page-handler="view" method="post">
    <div class="container text-center mt-3 searchResults">
      <div class="row searchHeader">
        <div class="col-4 col-md-2">
          ISBN
        </div>
        <div class="col-4 col-md-8">
          Titel
        </div>
        <div class="col-4 col-md-2">
          Författare
        </div>
      </div>
      @foreach (var result in Model.SearchResults)
        {
        <a asp-page="/ProductView" asp-route-id="@result.Id" class="row searchBody">
            <div class="col-4 col-md-2">
              @result.Isbn<input type="hidden" name="id" value="@result.Id.ToString()" />
            </div>
            <div class="col-4 col-md-8">
              @result.Title
            </div>
            @if(@result.FirstName != null && @result.LastName != null)
            {
                <div class="col-4 col-md-2">
                    @result.Authors
                </div>     
            }
        </a>
        }
    </div>
</form>
}

@section Navigation {
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">NewtonLibraryManager</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index">Sök</a>
                    </li>
                    @if (cookieValue1 == "True") {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/AddProduct">Lägg till produkt</a>
                    </li>
                    }
                    @if (cookieValue1 == "True" && cookieValue == "1") {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/AdminManagement">Hantera adminkonton</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Register">Registrera administratör</a>
                    </li>
                    }
                    @if (cookieValue != null) {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Profile" asp-route-id="@cookieValue">Profil</a>
                    </li>
                    }
                    @if (cookieValue == null) {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Login">Logga in</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Register">Registrera dig</a>
                    </li>
                    }
                    @if (cookieValue != null) {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Logout">Logga ut</a>
                    </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
}