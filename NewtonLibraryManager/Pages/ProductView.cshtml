@page "{id?}"
@model NewtonLibraryManager.Pages.ProductViewModel
@{
    ViewData["Title"] = @Model.Product.Title;
    string cookieValue = null;
    string cookieValue1 = null;
    cookieValue = Request.Cookies["LibraryCookie"];
    cookieValue1 = Request.Cookies["LibraryCookie1"];
    System.Globalization.CultureInfo ci = new System.Globalization.CultureInfo("en-us");
}

<div class="text-start">
    @if(Model.Id != null)
    {
    <div class="container text-start">
        <h3 class="mb-4">@Model.Product.Title</h3>

      <div class="row">
        <div class="col">
        @if(@Model.AuthorNames != null)
        {
        <b>Författare:</b>
            @for (int i = 0; i < @Model.AuthorNames.Count; i++)
            {
                <span class="mb-0 mt-0 pt-0 pb-0">@Model.AuthorNames[i]</span>
                @if(@Model.AuthorNames[i] != @Model.AuthorNames[^1])
                {
                    <br />
                }
            }
        }
        </div>
        <div class="col">
            <b>Kategori:</b> @Model.Product.Category
        </div>
      </div>

      <div class="row">
        <div class="col">
          <b>Dewey decimalklassifikation:</b> @Model.Product.DeweyString
        </div>
        <div class="col">
            <b>Språk:</b> @Model.Product.Language
        </div>
      </div>

      <div class="row">
        <div class="col">
          <b>ISBN:</b> @Model.Product.Isbn
        </div>
        <div class="col">
          <b>Antal ex:</b> @Model.Product.NrOfCopies
        </div>
      </div>
    </div>
    <div class="container mt-4 text-start beige-bg">@Model.Product.Description</div>
    }
</div>

@if(cookieValue != null) {
    <form method=post>
        <div class="container mt-4 text-center">
            <button type="submit" value="reserve" asp-page-handler="Reserve" class="btn btn-custom">Reservera</button>
        </div>
    </form>
}

@section Navigation {
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">NewtonLibraryManager</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index">Sök</a>
                    </li>
                    @if (cookieValue1 == "True") {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/AddProduct">Lägg till produkt</a>
                    </li>
                    }
                    @if (cookieValue1 == "True" && cookieValue == "1") {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/AdminManagement">Hantera adminkonton</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Register">Registrera användare</a>
                    </li>
                    }
                    @if (cookieValue != null) {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Profile" asp-route-id="@cookieValue">Profil</a>
                    </li>
                    }
                    @if (cookieValue == null) {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Login">Logga in</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Register">Registrera dig</a>
                    </li>
                    }
                    @if (cookieValue != null) {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Logout">Logga ut</a>
                    </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
}