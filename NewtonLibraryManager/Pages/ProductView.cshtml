@page "{id?}"
@model NewtonLibraryManager.Pages.ProductViewModel
@{
    ViewData["Title"] = Model.Title;
    string cookieValue = null;
    string cookieValue1 = null;
    cookieValue = Request.Cookies["LibraryCookie"];
    cookieValue1 = Request.Cookies["LibraryCookie1"];
}

<div class="text-center">
    <h1>Page loaded</h1>

    @if(Model.Id != null)
    {
    <h1 class="display-4">@Model.Title</h1>

    <div>@Model.Description</div>

    <div class="container">

      <div class="row">
        <div class="col">
          <b>Författare:</b> @Model.Author
        </div>
        <div class="col">
          <b>Språk:</b> @Model.Language
        </div>
      </div>

      <div class="row">
        <div class="col">
          <b>Dewey:</b> @Model.Dewey
        </div>
        <div class="col">
          <b>Kategori:</b> @Model.Category
        </div>
      </div>

      <div class="row">
        <div class="col">
          <b>ISBN:</b> @Model.Isbn
        </div>
        <div class="col">
          <!-- <b>In stock:</b> @Model.NrOfCopies -->
        </div>
      </div>
    </div>
    }

</div>

@section Navigation {
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">NewtonLibraryManager</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index">Sök</a>
                    </li>
                    @if (cookieValue == null) {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Login">Logga in</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Register">Registrera dig</a>
                    </li>
                    }
                    @if (cookieValue != null || cookieValue1 != null) {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Logout">Logga ut</a>
                    </li>
                    }
                    @if (cookieValue1 == "true") {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/AddProduct">Lägg till produkt</a>
                    </li>
                    }
                    @if (cookieValue1 == "true" && cookieValue == "1") {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/AdminManagement">Hantera adminkonton</a>
                    </li>
                    }

                </ul>
            </div>
        </div>
    </nav>
}