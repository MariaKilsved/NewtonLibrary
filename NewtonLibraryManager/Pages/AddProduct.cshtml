@page
@model NewtonLibraryManager.Pages.AddProductModel
@{
    ViewData["Title"] = "Lägg till produkt";
    string cookieValue = null;
    string cookieValue1 = null;
    string cookieValue2 = null;
    cookieValue = Request.Cookies["LibraryCookie"];
    cookieValue1 = Request.Cookies["LibraryCookie1"];
    cookieValue2 = Request.Cookies["LibraryCookie2"];
    string cookieComparer1 = Models.SecurePasswordHasher.Hash("NewtonLibraryManager_1");
    string cookieComparerTrue = Models.SecurePasswordHasher.Hash("NewtonLibraryManager_True");
}

@if(cookieValue1 == cookieComparerTrue)
{
<div class="text-center">
<h1 class="display-4">@ViewData["Title"]</h1>

<form method="post" class="mt-3 d-flex align-items-center flex-column">
    <div class="mb-3 AltAutoWidth">
        <label for="prodTitle" class="form-label"><b>Titel</b></label>
        <input type="text" asp-for="Title" class="form-control" id="prodTitle" minlength="4" maxlength="100" data-val-length-min="4" data-val-length-max="100"/>
    </div>

    <div class="d-flex flex-row justify-content-center">
        <div class="form-check p-4 text-start w-auto">
          <input asp-for="IsSwedish" class="form-check-input" type="radio" name="languageRadio" id="languageRadio1" value="true" checked>
          <label class="form-check-label" for="languageRadio1">
            <b>Svenska</b>
          </label>
        </div>
        <div class="form-check p-4 text-start w-auto">
          <input asp-for="IsEnglish" class="form-check-input" type="radio" name="languageRadio" id="languageRadio2" value="true">
          <label class="form-check-label" for="languageRadio2">
            <b>Engelska</b>
          </label>
        </div>
    </div>

    <div class="mb-3 AltAutoWidth">
        <label for="categorySelect" class="form-label"><b>Kategori</b></label>
        <select asp-for="SelectedCategory" asp-items="Model.Categories" class="form-select" name="categoryId" id="categorySelect"></select>
    </div>

    <div class="mb-3 AltAutoWidth">
        <label for="dewey" class="form-label"><b>Dewey decimalklassifikation</b></label>
        <input type="number" asp-for="Dewey" class="form-control" id="dewey" step="0.001" min="0.001" max="999.999" value="839.738"/>
    </div>

    <div class="mb-3 AltAutoWidth">
      <label for="descriptionTextArea" class="form-label"><b>Beskrivning</b></label>
      <textarea asp-for="Description" class="form-control" id="descriptionTextArea" rows="3"></textarea>
    </div>

    <div class="mb-3 AltAutoWidth">
        <label for="isbn" class="form-label"><b>ISBN</b></label>
        <input type="text" asp-for="Isbn" class="form-control" id="isbn" minlength="10" maxlength="13" data-val-length-min="10" data-val-length-max="13"/>
    </div>

    <div class="mb-3 AltAutoWidth">
        <label for="prodTypeSelect" class="form-label"><b>Produkttyp</b></label>
        <select asp-items="Model.ProdTypes" asp-for="SelectedProdType" class="form-select" aria-label="Produkttyp" name="prodTypeId"></select>
    </div>

    <div class="mb-3 AltAutoWidth">
        <label for="nrOfCopies" class="form-label"><b>Antal exemplar</b></label>
        <input type="number" asp-for="NrOfCopies" class="form-control" id="nrOfCopies" step="1" min="1" max="100" value="1"/>
    </div>

    <button type="submit" class="btn btn-custom">Lägg till</button>
</form>
    </div>
}
else
{
    <p>Sidan är ej tillgänglig.</p>
}



@section Navigation {
        <nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                <img src="/css/img/logo.svg" alt="" width="24" height="24" class="d-inline-block align-text-top" />
                <div class="d-inline-flex align-items-center ps-1">
                    <img src="/css/img/logo-newton.svg" alt="" width="77" height="16" /> 
                </div></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index">Sök</a>
                    </li>
                    @if (cookieValue1 == cookieComparerTrue) {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/AddProduct">Lägg till produkt</a>
                    </li>
                    }
                    @if (cookieValue1 == cookieComparerTrue && cookieValue == cookieComparer1) {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/AdminManagement">Hantera adminkonton</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Register">Registrera användare</a>
                    </li>
                    }
                    @if (cookieValue != null) {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Profile" asp-route-id="@cookieValue2">Profil</a>
                    </li>
                    }
                    @if (cookieValue == null) {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Login">Logga in</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Register">Registrera dig</a>
                    </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
}