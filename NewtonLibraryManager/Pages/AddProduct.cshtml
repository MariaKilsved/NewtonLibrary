@page
@model NewtonLibraryManager.Pages.AddProductModel
@{
    ViewData["Title"] = "Add Product";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>

<form method="post" class="mt-3 d-flex align-items-center flex-column">
    <div class="mb-3 AltAutoWidth">
        <label for="prodTitle" class="form-label">Title</label>
        <input type="text" asp-for="Title" class="form-control" id="prodTitle" maxlength="100" />
    </div>

    <div class="d-flex flex-row justify-content-center">
        <div class="form-check p-4 text-start w-auto">
          <input asp-for="IsSwedish" class="form-check-input" type="radio" name="languageRadio" id="languageRadio1" value="true" checked>
          <label class="form-check-label" for="languageRadio1">
            Swedish
          </label>
        </div>
        <div class="form-check p-4 text-start w-auto">
          <input asp-for="IsEnglish" class="form-check-input" type="radio" name="languageRadio" id="languageRadio2" value="true">
          <label class="form-check-label" for="languageRadio2">
            English
          </label>
        </div>
    </div>

    <!-- < asp-items="Categories" class="form-select" aria-label="Category" name="prodTypeId"></select> -->

    <div class="mb-3 AltAutoWidth">
        <label for="dewey" class="form-label">Dewey Decimal Classification</label>
        <input type="number" asp-for="Dewey" class="form-control" id="dewey" step="0.001" min="0.001" max="999.999"/>
    </div>

    <div class="mb-3">
      <label for="descriptionTextArea" class="form-label">Description</label>
      <textarea asp-for="Description" class="form-control" id="descriptionTextArea" rows="3"></textarea>
    </div>

    <div class="mb-3 AltAutoWidth">
        <label for="isbn" class="form-label">ISBN</label>
        <input type="number" asp-for="Isbn" class="form-control" id="isbn" step="1" min="0" max="9999999999999"/>
    </div>

    <!--<select asp-items="ProdTypes" class="form-select" aria-label="Product Type" name="prodTypeId"></select>-->

    <button type="submit" class="btn btn-custom">Add</button>
</form>

</div>