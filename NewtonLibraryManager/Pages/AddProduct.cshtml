@page
@model NewtonLibraryManager.Pages.AddProductModel
@{
    ViewData["Title"] = "Lägg till produkt";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>

<form method="post" class="mt-3 d-flex align-items-center flex-column">
    <div class="mb-3 AltAutoWidth">
        <label for="prodTitle" class="form-label"><b>Titel</b></label>
        <input type="text" asp-for="Title" class="form-control" id="prodTitle" minlength="4" maxlength="100" data-val-length-min="4" data-val-length-max="100"/>
    </div>

    <div class="d-flex flex-row justify-content-center">
        <div class="form-check p-4 text-start w-auto">
          <input asp-for="IsSwedish" class="form-check-input" type="radio" name="languageRadio" id="languageRadio1" value="true" checked>
          <label class="form-check-label" for="languageRadio1">
            <b>Svenska</b>
          </label>
        </div>
        <div class="form-check p-4 text-start w-auto">
          <input asp-for="IsEnglish" class="form-check-input" type="radio" name="languageRadio" id="languageRadio2" value="true">
          <label class="form-check-label" for="languageRadio2">
            <b>Engelska</b>
          </label>
        </div>
    </div>

    <div class="mb-3 AltAutoWidth">
        <label for="categorySelect" class="form-label"><b>Kategori</b></label>
        <select asp-for="SelectedCategory" asp-items="Model.Categories" class="form-select" name="categoryId" id="categorySelect"></select>
    </div>

    <div class="mb-3 AltAutoWidth">
        <label for="dewey" class="form-label"><b>Dewey decimalklassifikation</b></label>
        <input type="number" asp-for="Dewey" class="form-control" id="dewey" step="0.001" min="0.001" max="999.999" value="839.738"/>
    </div>

    <div class="mb-3 AltAutoWidth">
      <label for="descriptionTextArea" class="form-label"><b>Beskrivning</b></label>
      <textarea asp-for="Description" class="form-control" id="descriptionTextArea" rows="3"></textarea>
    </div>

    <div class="mb-3 AltAutoWidth">
        <label for="isbn" class="form-label"><b>ISBN</b></label>
        <input type="number" asp-for="Isbn" class="form-control" id="isbn" step="1" min="0" max="9999999999999"/>
    </div>

    <div class="mb-3 AltAutoWidth">
        <label for="prodTypeSelect" class="form-label"><b>Produkttyp</b></label>
        <select asp-items="Model.ProdTypes" asp-for="SelectedProdType" class="form-select" aria-label="Produkttyp" name="prodTypeId"></select>
    </div>

    <button type="submit" class="btn btn-custom">Lägg till</button>
</form>

</div>

@section Navigation {
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">NewtonLibraryManager</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index">Search</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Login">Log in</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/AddProduct">Add Product</a>
                    </li>
                    <li class="nav-item">
                        <a style="color:"red;" class="nav-link text-dark" asp-area="" asp-page="/AdminManagement">Admin Management</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
}