@page
@model NewtonLibraryManager.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <h1 class="display-4">Log in</h1>

<form id="loginForm" method="post" class="mt-3 d-flex align-items-center flex-column">
    <div class="mb-3 AltAutoWidth">
        <label for="loginEmail" class="form-label">Email address</label>
        <input type="email" asp-for="EMail" class="form-control" id="loginEmail" aria-describedby="emailHelp" maxlength="90" />
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3 AltAutoWidth">
        <label for="loginPassword" class="form-label">Password</label>
        <input type="password" asp-for="Password" class="form-control" id="loginPassword" />
    </div>
    <button type="submit" class="btn btn-custom">Log in</button>
</form>

</div>
