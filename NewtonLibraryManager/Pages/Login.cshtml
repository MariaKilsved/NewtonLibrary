@page
@model NewtonLibraryManager.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <h1 class="display-4">Logga in</h1>

<form id="loginForm" method="post" class="mt-3 d-flex align-items-center flex-column">
    <div class="mb-3 AltAutoWidth">
        <label for="loginEmail" class="form-label"><b>Email adress</b></label>
        <input type="email" asp-for="EMail" class="form-control" id="loginEmail" aria-describedby="emailHelp" maxlength="90" data-val-length-max="90"/>
    <div id="emailHelp" class="form-text"><i>Vi delar aldrig din email med någon annan.</i></div>
    </div>
    <div class="mb-3 AltAutoWidth">
        <label for="loginPassword" class="form-label"><b>Lösenord</b></label>
        <input type="password" asp-for="Password" class="form-control" id="loginPassword" />
    </div>
    <button type="submit" class="btn btn-custom">Log in</button>
</form>

</div>

@section Navigation {
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">NewtonLibraryManager</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index">Search</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Login">Log in</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/AddProduct">Add Product</a>
                    </li>
                    <li class="nav-item">
                        <a style="color:"red;" class="nav-link text-dark" asp-area="" asp-page="/AdminManagement">Admin Management</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
}