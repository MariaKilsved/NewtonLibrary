@page
@model NewtonLibraryManager.Pages.ProfileModel
@{
    string cookieValue = null;
    string cookieValue1 = null;
    cookieValue = Request.Cookies["LibraryCookie"];
    cookieValue1 = Request.Cookies["LibraryCookie1"];

    @if(cookieValue != null)
    {
        ViewData["Title"] = @Model.User1.FirstName + " " + @Model.User1.LastName;
    }
    else
    {
        ViewData["Title"] = "";
    }
}
    @if(Model.User1 != null && Model.User1.Id > 0 && (cookieValue == Model.User1.Id.ToString() || cookieValue1 == "True"))
    {
    <div class="text-start container">
            <h3 class="mb-4">@Model.ViewData["Title"]</h3>
            <div class="row">
                <div class="col"><b>Förnamn</b></div>
                <div class="col">@Model.User1.FirstName</div>
            </div>
            <div class="row">
                <div class="col"><b>Efternamn</b></div>
                <div class="col">@Model.User1.LastName</div>
            </div>
            <div class="row">
                <div class="col"><b>E-mail</b></div>
                <div class="col">@Model.User1.EMail</div>
            </div>
            <div class="row">
                <div class="col"><b>Lösenord</b></div>
                <div class="col">Dolt</div>
            </div>
            <form class="text-center mt-4" method="post" asp-page-handler="delete" >
                <input type="hidden" value="@Model.User1.Id" />
                <button type="submit" class="btn btn-custom">Ta bort konto</button>
            </form>
    </div>
}
else
{
    <p>Sidan är inte tillgänglig.</p>
}


@section Navigation {
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">NewtonLibraryManager</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index">Sök</a>
                    </li>
                    @if (cookieValue1 == "True") {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/AddProduct">Lägg till produkt</a>
                    </li>
                    }
                    @if (cookieValue1 == "True" && cookieValue == "1") {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/AdminManagement">Hantera adminkonton</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Register">Registrera användare</a>
                    </li>
                    }
                    @if (cookieValue != null) {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Profile" asp-route-id="@cookieValue">Profil</a>
                    </li>
                    }
                    @if (cookieValue == null) {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Login">Logga in</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Register">Registrera dig</a>
                    </li>
                    }
                    @if (cookieValue != null) {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Logout">Logga ut</a>
                    </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
}