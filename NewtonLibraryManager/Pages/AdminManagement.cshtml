@page
@model NewtonLibraryManager.Pages.AdminManagementModel
@{
    ViewData["Title"] = "Admin";
    var cookieValue = Request.Cookies["LibraryCookie"];
}
<div class="text-center">
@if (cookieValue == "1")
{
    <h1 class="display-4">Administrera administratörer</h1>

    <form method="post">
        <div class="container text-center mt-3 searchResults">
          <div class="row">
            <div class="col-4">
              <b>Förnamn</b>
            </div>
            <div class="col-4">
              <b>Efternamn</b>
            </div>
            <div class="col-4">
              <b>E-mail</b>
            </div>
          </div>
          @foreach (var admin in Model.Admins)
            {
            <a class="row" asp-page="./Product/@admin.Id">
                <div class="col-4">
                  @admin.FirstName<input type="hidden" name="id" value="@admin.Id" />
                </div>
                <div class="col-4">
                  @admin.LastName
                </div>
                <div class="col-4">
                  @admin.EMail
                </div>
            </a>
            }
        </div>
    </form>
}
else
{
    <p>Sidan är ej tillgänglig.</p>
}
</div>



@section Navigation {
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">NewtonLibraryManager</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index">Search</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Login">Log in</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/AddProduct">Add Product</a>
                    </li>
                    <li class="nav-item">
                        <a style="color:"red;" class="nav-link text-dark" asp-area="" asp-page="/AdminManagement">Admin Management</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
}